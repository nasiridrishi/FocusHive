# FocusHive Docker Environment Configuration
# Copy this file to .env and update with your values

# === Database Configuration ===
DB_PASSWORD=focushive123
DB_PORT=5432

# === Redis Configuration ===
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# === JWT Configuration ===
# Generate with: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-for-jwt-token-generation
JWT_EXPIRATION=900000        # 15 minutes in milliseconds
JWT_REFRESH_EXPIRATION=604800000  # 7 days in milliseconds

# === Service Ports ===
BACKEND_PORT=8080
IDENTITY_PORT=8081
FRONTEND_PORT=3000

# === Development Tools (only used with --profile dev) ===
PGADMIN_EMAIL=admin@focushive.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050
REDIS_COMMANDER_PORT=8082

# === Frontend Configuration ===
VITE_API_BASE_URL=http://localhost:8080
VITE_WEBSOCKET_URL=ws://localhost:8080
VITE_IDENTITY_SERVICE_URL=http://localhost:8081
VITE_ENABLE_ANALYTICS=false
VITE_SENTRY_DSN=

# === Production Configuration ===
# These are used in docker-compose.prod.yml
PRODUCTION_API_URL=https://api.focushive.com
PRODUCTION_WS_URL=wss://api.focushive.com
PRODUCTION_IDENTITY_URL=https://auth.focushive.com
CORS_ALLOWED_ORIGINS=https://focushive.com,https://www.focushive.com

# === SSL Configuration (Production) ===
# Place SSL certificates in docker/nginx/ssl/
# Required files: fullchain.pem, privkey.pem, chain.pem

# === Monitoring (Optional) ===
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# === Email Service (Optional) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@focushive.com

# === Cloudflare Tunnel Configuration ===
# Required for dev.focushive.app to work
# Token from Cloudflare Zero Trust Dashboard
CLOUDFLARE_TUNNEL_TOKEN=

# === External Services (Optional) ===
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
OPENAI_API_KEY=
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# === Resource Limits (Optional) ===
# Override default resource limits if needed
POSTGRES_MAX_CONNECTIONS=200
REDIS_MAX_MEMORY=512mb
BACKEND_MAX_HEAP=1g
IDENTITY_MAX_HEAP=512m