<?xml version="1.0" encoding="UTF-8"?>
<!--
Test-specific Logback configuration
Optimized for minimal logging noise during test execution
-->
<configuration>
    <!-- Console appender for test output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level [TEST] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for detailed test logs (optional) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>target/test-logs/test.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{testClass}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Application loggers -->
    <logger name="com.focushive" level="INFO" />
    
    <!-- Framework loggers (reduced noise) -->
    <logger name="org.springframework" level="WARN" />
    <logger name="org.springframework.boot" level="WARN" />
    <logger name="org.springframework.security" level="WARN" />
    <logger name="org.springframework.web" level="WARN" />
    <logger name="org.springframework.test" level="WARN" />
    <logger name="org.springframework.transaction" level="WARN" />
    <logger name="org.springframework.orm" level="WARN" />
    <logger name="org.springframework.data" level="WARN" />
    
    <!-- Database loggers -->
    <logger name="org.hibernate" level="WARN" />
    <logger name="org.hibernate.SQL" level="WARN" />
    <logger name="org.hibernate.type" level="WARN" />
    <logger name="org.h2" level="WARN" />
    <logger name="org.flyway" level="WARN" />
    
    <!-- Test framework loggers -->
    <logger name="org.junit" level="WARN" />
    <logger name="org.mockito" level="WARN" />
    <logger name="org.testcontainers" level="WARN" />
    
    <!-- External library loggers -->
    <logger name="feign" level="WARN" />
    <logger name="org.apache.http" level="WARN" />
    <logger name="com.netflix" level="WARN" />
    
    <!-- Enable specific test context information -->
    <logger name="org.springframework.test.context" level="INFO" />
    <logger name="org.springframework.boot.test" level="INFO" />

    <!-- Root logger configuration -->
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Conditional file logging (enable for debugging) -->
    <!-- 
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
    -->
</configuration>