# ============================================================================
# FocusHive Buddy Service Environment Configuration Template
# ============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
SERVICE_NAME=buddy-service
SERVICE_VERSION=1.0.0
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8087
MANAGEMENT_SERVER_PORT=8088

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================
POSTGRES_HOST=focushive_buddy_service_postgres
POSTGRES_PORT=5432
POSTGRES_DB=buddy_service
POSTGRES_USER=buddy_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=focushive_buddy_service_redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_DATABASE=7

# ============================================================================
# SECURITY & JWT CONFIGURATION
# ============================================================================
JWT_SECRET=CHANGE_ME_MINIMUM_256_BIT_SECRET_KEY
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=604800

# ============================================================================
# SERVICE URLS
# ============================================================================
IDENTITY_SERVICE_URL=http://identity-service:8081
BACKEND_SERVICE_URL=http://focushive-backend:8080
NOTIFICATION_SERVICE_URL=http://notification-service:8083

# ============================================================================
# BUDDY SERVICE CONFIGURATION
# ============================================================================
BUDDY_MATCHING_MAX_SUGGESTIONS=10
BUDDY_MATCHING_COMPATIBILITY_THRESHOLD=0.6
BUDDY_PARTNERSHIP_MAX_PER_USER=3
BUDDY_CHECKIN_REMINDER_HOUR=20

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=development
DEBUG_MODE=false

# ============================================================================
# EXTERNAL PORTS
# ============================================================================
POSTGRES_EXTERNAL_PORT=5437
REDIS_EXTERNAL_PORT=6387
APP_EXTERNAL_PORT=8087