{
  "dashboard": {
    "id": null,
    "uid": "notification-service",
    "title": "Notification Service Dashboard",
    "tags": ["notification", "monitoring", "focushive"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Notifications Sent/Failed Rate",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(notification_sent_total[5m])",
            "legendFormat": "Sent",
            "refId": "A"
          },
          {
            "expr": "rate(notification_failed_total[5m])",
            "legendFormat": "Failed",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Notifications/sec",
            "show": true
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "nullPointMode": "null"
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Email Delivery Time",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum(rate(email_delivery_time_bucket[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(email_delivery_time_bucket[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(email_delivery_time_bucket[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "ms",
            "label": "Response Time",
            "show": true
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 0,
        "linewidth": 2
      },
      {
        "id": 3,
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "type": "stat",
        "title": "Success Rate",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "(sum(rate(notification_sent_total[5m])) / (sum(rate(notification_sent_total[5m])) + sum(rate(notification_failed_total[5m])))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 95, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "type": "stat",
        "title": "Email Queue Depth",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "email_queue_depth",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "type": "stat",
        "title": "Template Cache Hit Ratio",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "(sum(rate(template_cache_hits[5m])) / (sum(rate(template_cache_hits[5m])) + sum(rate(template_cache_misses[5m])))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "type": "stat",
        "title": "Active Connections",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "notification_active_connections",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "type": "graph",
        "title": "Circuit Breaker State",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "resilience4j_circuitbreaker_state{name=\"email-service\"}",
            "legendFormat": "Email Service",
            "refId": "A"
          },
          {
            "expr": "resilience4j_circuitbreaker_state{name=\"identity-service\"}",
            "legendFormat": "Identity Service",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "State (0=Closed, 1=Open, 2=Half-Open)",
            "min": 0,
            "max": 2,
            "show": true
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "linewidth": 2,
        "steps": true
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "type": "graph",
        "title": "Rate Limiting",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(rate_limit_violations[5m])",
            "legendFormat": "Violations",
            "refId": "A"
          },
          {
            "expr": "rate(rate_limit_allowed[5m])",
            "legendFormat": "Allowed",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Requests/sec",
            "show": true
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "type": "graph",
        "title": "JVM Memory Usage",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{area=\"heap\"}",
            "legendFormat": "Heap Used",
            "refId": "A"
          },
          {
            "expr": "jvm_memory_max_bytes{area=\"heap\"}",
            "legendFormat": "Heap Max",
            "refId": "B"
          },
          {
            "expr": "jvm_memory_used_bytes{area=\"nonheap\"}",
            "legendFormat": "Non-Heap Used",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "Memory",
            "show": true
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 1
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "type": "graph",
        "title": "Database Connection Pool",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "database_connection_pool_active",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "database_connection_pool_idle",
            "legendFormat": "Idle",
            "refId": "B"
          },
          {
            "expr": "database_connection_pool_pending",
            "legendFormat": "Pending",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections",
            "show": true
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 11,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
        "type": "graph",
        "title": "HTTP Request Performance",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum(rate(http_server_requests_seconds_bucket[5m])) by (le, uri))",
            "legendFormat": "p50 {{uri}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le, uri))",
            "legendFormat": "p95 {{uri}}",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_server_requests_seconds_bucket[5m])) by (le, uri))",
            "legendFormat": "p99 {{uri}}",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Response Time",
            "show": true
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 0,
        "linewidth": 1
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{service=\"notification-service\"}",
          "iconColor": "red",
          "name": "Alerts",
          "tagKeys": "severity",
          "titleFormat": "{{ alertname }}",
          "textFormat": "{{ message }}"
        }
      ]
    }
  }
}