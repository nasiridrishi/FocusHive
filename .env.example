# =============================================================================
# FocusHive Docker Compose Environment Configuration
# =============================================================================

# =============================================================================
# Main Application Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=focushive
DB_USER=focushive_user
DB_PASSWORD=focushive_pass
DB_EXTERNAL_PORT=5432

# =============================================================================
# Main Application Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=focushive_pass
REDIS_EXTERNAL_PORT=6379

# =============================================================================
# Identity Service Database Configuration
# =============================================================================
IDENTITY_DB_HOST=identity-db
IDENTITY_DB_PORT=5432
IDENTITY_DB_NAME=identity_db
IDENTITY_DB_USER=identity_user
IDENTITY_DB_PASSWORD=identity_pass
IDENTITY_DB_EXTERNAL_PORT=5433

# =============================================================================
# Identity Service Redis Configuration
# =============================================================================
IDENTITY_REDIS_HOST=identity-redis
IDENTITY_REDIS_PORT=6379
IDENTITY_REDIS_PASSWORD=identity_redis_pass
IDENTITY_REDIS_EXTERNAL_PORT=6380

# =============================================================================
# Identity Service Configuration
# =============================================================================
IDENTITY_SERVICE_PORT=8081
KEY_STORE_PASSWORD=changeme
PRIVATE_KEY_PASSWORD=changeme
FOCUSHIVE_CLIENT_SECRET=secret

# =============================================================================
# Application Configuration
# =============================================================================
BACKEND_PORT=8080
SERVER_PORT=8080
LOG_LEVEL=INFO
SHOW_SQL=false
SPRING_PROFILES_ACTIVE=default

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=86400000

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:80
VITE_IDENTITY_SERVICE_URL=http://localhost:80
NODE_ENV=development

# =============================================================================
# NGINX Configuration
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# Docker and Networking
# =============================================================================
COMPOSE_PROJECT_NAME=focushive
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1