# =============================================================================
# FocusHive Docker Compose Environment Configuration
# =============================================================================

# =============================================================================
# Main Application Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=focushive
DB_USER=focushive_user
DB_PASSWORD=focushive_pass
DB_EXTERNAL_PORT=5432

# =============================================================================
# Main Application Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=focushive_pass
REDIS_EXTERNAL_PORT=6379

# =============================================================================
# Identity Service Database Configuration
# =============================================================================
IDENTITY_DB_HOST=identity-db
IDENTITY_DB_PORT=5432
IDENTITY_DB_NAME=identity_db
IDENTITY_DB_USER=identity_user
IDENTITY_DB_PASSWORD=identity_pass
IDENTITY_DB_EXTERNAL_PORT=5433

# =============================================================================
# Identity Service Redis Configuration
# =============================================================================
IDENTITY_REDIS_HOST=identity-redis
IDENTITY_REDIS_PORT=6379
IDENTITY_REDIS_PASSWORD=identity_redis_pass
IDENTITY_REDIS_EXTERNAL_PORT=6380

# =============================================================================
# Identity Service Configuration
# =============================================================================
IDENTITY_SERVICE_PORT=8081
KEY_STORE_PASSWORD=changeme
PRIVATE_KEY_PASSWORD=changeme
FOCUSHIVE_CLIENT_SECRET=secret

# =============================================================================
# Application Configuration
# =============================================================================
BACKEND_PORT=8080
SERVER_PORT=8080
LOG_LEVEL=INFO
SHOW_SQL=false
SPRING_PROFILES_ACTIVE=default

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=86400000

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:80
VITE_IDENTITY_SERVICE_URL=http://localhost:80
NODE_ENV=development

# =============================================================================
# NGINX Configuration
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# Music Service Configuration
# =============================================================================
MUSIC_DB_NAME=focushive_music
MUSIC_DB_USER=music_user
MUSIC_DB_PASSWORD=music_pass
MUSIC_REDIS_PASSWORD=music_redis_pass
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8082/api/music/spotify/callback

# =============================================================================
# Notification Service Configuration
# =============================================================================
NOTIFICATION_DB_NAME=notification_service
NOTIFICATION_DB_USER=notification_user
NOTIFICATION_DB_PASSWORD=notification_pass

# =============================================================================
# Chat Service Configuration  
# =============================================================================
CHAT_DB_NAME=chat_service
CHAT_DB_USER=chat_user
CHAT_DB_PASSWORD=chat_pass
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# =============================================================================
# Analytics Service Configuration
# =============================================================================
ANALYTICS_DB_NAME=analytics_service
ANALYTICS_DB_USER=analytics_user
ANALYTICS_DB_PASSWORD=analytics_pass

# =============================================================================
# Forum Service Configuration
# =============================================================================
FORUM_DB_NAME=forum_service
FORUM_DB_USER=forum_user
FORUM_DB_PASSWORD=forum_pass

# =============================================================================
# Buddy Service Configuration
# =============================================================================
BUDDY_DB_NAME=buddy_service
BUDDY_DB_USER=buddy_user
BUDDY_DB_PASSWORD=buddy_pass

# =============================================================================
# Docker and Networking
# =============================================================================
COMPOSE_PROJECT_NAME=focushive
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1