# FocusHive Environment Configuration
# 
# Copy this file to .env and update the values for your environment.
# Environment variables must be prefixed with VITE_ to be accessible in the client.

# ========================================
# MICROSERVICE URLS (REQUIRED)
# ========================================

# Identity Service (Port 8081) - Authentication & Personas
VITE_IDENTITY_URL=http://localhost:8081

# FocusHive Backend (Port 8080) - Core Features
VITE_BACKEND_URL=http://localhost:8080

# Music Service (Port 8082) - Spotify Integration
VITE_MUSIC_URL=http://localhost:8082

# Notification Service (Port 8083) - Multi-channel Notifications
VITE_NOTIFICATION_URL=http://localhost:8083

# Chat Service (Port 8084) - Real-time Messaging
VITE_CHAT_URL=http://localhost:8084

# Analytics Service (Port 8085) - Productivity Tracking
VITE_ANALYTICS_URL=http://localhost:8085

# Forum Service (Port 8086) - Community Discussions
VITE_FORUM_URL=http://localhost:8086

# Buddy Service (Port 8087) - Accountability Partners
VITE_BUDDY_URL=http://localhost:8087

# ========================================
# WEBSOCKET CONFIGURATION (REQUIRED)
# ========================================

# Main WebSocket connection for core features
VITE_WS_URL=ws://localhost:8080/ws

# Service-specific WebSocket connections
VITE_CHAT_WS_URL=ws://localhost:8084/ws
VITE_MUSIC_WS_URL=ws://localhost:8082/ws
VITE_ANALYTICS_WS_URL=ws://localhost:8085/ws
VITE_FORUM_WS_URL=ws://localhost:8086/ws
VITE_BUDDY_WS_URL=ws://localhost:8087/ws

# WebSocket Connection Settings (Optional - defaults provided)
VITE_WEBSOCKET_RECONNECT_ATTEMPTS=10
VITE_WEBSOCKET_RECONNECT_DELAY=1000
VITE_WEBSOCKET_HEARTBEAT_INTERVAL=30000

# ========================================
# LEGACY CONFIGURATION (DEPRECATED)
# ========================================

# These are maintained for backward compatibility
# Use the specific service URLs above instead
VITE_API_BASE_URL=http://localhost:8080
VITE_WEBSOCKET_URL=ws://localhost:8080
VITE_IDENTITY_API_URL=http://localhost:8081
VITE_MUSIC_SERVICE_URL=http://localhost:8082
VITE_MUSIC_API_BASE_URL=http://localhost:8082

# ========================================
# OPTIONAL CONFIGURATION
# ========================================

# Spotify Web SDK Integration (Optional)
# Get Client ID from https://developer.spotify.com/dashboard
VITE_SPOTIFY_CLIENT_ID=your_spotify_client_id_here
# Must match exactly with what's configured in your Spotify app
VITE_SPOTIFY_REDIRECT_URI=http://localhost:3000/music/spotify/callback

# Error Logging Configuration (Optional)
# Remote error logging service endpoint
# VITE_ERROR_LOGGING_ENDPOINT=https://your-logging-service.com/api/errors
# API key for error logging service
# VITE_ERROR_LOGGING_API_KEY=your_api_key_here

