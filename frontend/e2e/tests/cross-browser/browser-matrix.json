  },
  "testMatrix": {
    "core-functionality": {
      "browsers": ["chrome", "firefox", "safari", "edge"],
      "platforms": ["desktop", "mobile"],
      "priority": "critical"
    },
    "javascript-features": {
      "browsers": ["chrome", "firefox", "safari", "edge"],
      "platforms": ["desktop"],
      "priority": "high"
    },
    "css-features": {
      "browsers": ["chrome", "firefox", "safari", "edge"],
      "platforms": ["desktop", "mobile"],
      "priority": "high"
    },
    "websocket-realtime": {
      "browsers": ["chrome", "firefox", "safari", "edge"],
      "platforms": ["desktop", "mobile"],
      "priority": "critical"
    },
    "media-handling": {
      "browsers": ["chrome", "firefox", "safari", "edge"],
      "platforms": ["desktop", "mobile"],
      "priority": "medium"
    },
    "pwa-features": {
      "browsers": ["chrome", "firefox", "safari", "edge"],
      "platforms": ["desktop", "mobile"],
      "priority": "high"
    },
    "form-input": {
      "browsers": ["chrome", "firefox", "safari", "edge"],
      "platforms": ["desktop", "mobile"],
      "priority": "high"
    },
    "browser-specific": {
      "browsers": ["chrome", "firefox", "safari", "edge"],
      "platforms": ["desktop"],
      "priority": "low"
    }
  },
  "compatibility": {
    "minimum-versions": {
      "chrome": "90",
      "firefox": "88",
      "safari": "14",
      "edge": "90"
    },
    "polyfills-required": {
      "safari": ["webp", "avif"],
      "firefox": ["avif"],
      "ie11": ["fetch", "promises", "customelements"]
    },
    "known-issues": {
      "safari": [
        "IndexedDB limitations with large datasets",
        "WebSocket connection issues in background tabs",
        "Service Worker restrictions in private browsing"
      ],
      "firefox": [
        "AVIF image format not supported",
        "Different WebGL context behavior",
        "Slight CSS Grid rendering differences"
      ],
      "edge": [
        "Legacy Edge compatibility issues",
        "Some Chromium-specific APIs not available in older versions"
      ]
    }
  },
  "test-environments": {
    "local": {
      "browsers": ["chrome", "firefox", "edge"],
      "headless": false,
      "workers": 3
    },
    "ci": {
      "browsers": ["chrome", "firefox"],
      "headless": true,
      "workers": 1
    },
    "browserstack": {
      "browsers": ["chrome", "firefox", "safari", "edge"],
      "platforms": ["desktop", "mobile"],
      "real-devices": true
    },
    "saucelabs": {
      "browsers": ["chrome", "firefox", "safari", "edge"],
      "platforms": ["desktop", "mobile"],
      "real-devices": true
    }
  }
}