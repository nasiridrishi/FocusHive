{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "types": [
      "vitest/globals",
      "vite-plugin-pwa/client",
      "@testing-library/jest-dom",
      "jest-axe"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@test-utils/*": [
        "src/test-utils/*"
      ]
    }
  },
  "include": [
    "src",
    "src/types/pwa.ts"
  ],
  "exclude": [
    "src/components/demo/**/*",
    "src/examples/**/*",
    "src/shared/components/lazy-charts/**/*",
    "src/shared/components/lazy-date-pickers/**/*",
    "src/shared/components/dynamic-icon/**/*",
    "src/shared/components/error-boundary/**/*",
    "src/shared/accessibility/**/*",
    "src/services/validation/**/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}